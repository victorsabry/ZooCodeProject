@model ZooCode.Pages.ZooAnimals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create Relation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ZooAnimal.Zoo.Zoo_name" class="control-label"></label>
                <select asp-for="ZooAnimal.ZooID" class ="form-control" asp-items="ViewBag.ZooID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ZooAnimal.Animal.Animal_name" class="control-label"></label>
                <select asp-for="ZooAnimal.AnimalID" class ="form-control" asp-items="ViewBag.AnimalID"></select>
            </div>
            <div class="form-group">
                @if (Model.ErrorCreateMSG != null)
                {
                    @Model.ErrorCreateMSG
                    ;
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
